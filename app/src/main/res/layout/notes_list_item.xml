<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

<RelativeLayout
android:layout_width="match_parent"
    android:layout_marginBottom="15dp"
    android:background="@drawable/bg_card"
    android:foreground="@null"
    android:layout_height="wrap_content"
    tools:context="com.example.shivam.materialnotes.RegisterActivity">

    <!--<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="2dp"
        >!-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/nliveo_blue_colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:inputType="textCapSentences"
            android:textSize="25sp"
            android:id="@+id/noteTitle"
            android:drawableStart="@drawable/ic_arrow_forward_white_24dp"
            android:drawableLeft="@drawable/ic_arrow_forward_white_24dp"
            android:drawablePadding="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            />
        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content"
            android:id="@+id/noteContent"
            android:layout_below="@+id/toolbar"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/nliveo_black"
            />
    </RelativeLayout>
</FrameLayout>

